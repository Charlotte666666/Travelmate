<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SuggestionActivity" >

    <LinearLayout
        android:id="@+id/suggestion_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/app_main_color"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/suggestion_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_button_back"
            android:drawableLeft="@drawable/back"
            android:gravity="center_vertical"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/add_suggestion"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/edit_bg"
        android:gravity="left|top"
        android:hint="您的建议将是我们前进的最大动力。"
        android:maxLength="400"
        android:padding="3dp"
        android:textColor="#434343"
        android:textSize="15sp" />

    <Button
        android:id="@+id/submit_suggestion"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_button_complete"
        android:text="提交"
        android:textColor="@color/white" />

</LinearLayout>