<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyWordsActivity" >

    <RelativeLayout
        android:id="@+id/rela_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#00C87D"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/words_back"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/back"
            android:gravity="center_vertical"
            android:text="返回"
            android:textColor="@drawable/text_color_white_gray"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="我的留言"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <com.jayrun.widgets.AutoListView
        android:id="@+id/my_words_details_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rela_title"
        android:listSelector="@drawable/bg_button_normal_gray"
        android:scrollbars="none"
        android:smoothScrollbar="true" >
    </com.jayrun.widgets.AutoListView>

</RelativeLayout>