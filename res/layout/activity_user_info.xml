<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.jayrun.travelmate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FB"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/userinfo_lin_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/app_main_color"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/user_info_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_button_back"
            android:drawableLeft="@drawable/back"
            android:gravity="center_vertical"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号信息"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <com.jayrun.widgets.CircleImageView
                android:id="@+id/info_head"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                app:border_color="@color/white"
                app:border_width="1dp" />

            <TextView
                android:id="@+id/info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#ffcc00"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="20dp"
                android:background="#DFDFDF" />

            <TextView
                android:id="@+id/my_words"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_button_normal_gray"
                android:clickable="true"
                android:drawableLeft="@drawable/word_img"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                android:text="我的留言"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#DFDFDF" />

            <TextView
                android:id="@+id/my_strategy"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_button_normal_gray"
                android:clickable="true"
                android:drawableLeft="@drawable/my_strategy"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                android:text="我的攻略"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#DFDFDF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="20dp"
                android:background="#DFDFDF" />

            <TextView
                android:id="@+id/change_info"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_button_normal_gray"
                android:clickable="true"
                android:drawableLeft="@drawable/my_info"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                android:text="编辑资料"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#DFDFDF" />

            <TextView
                android:id="@+id/change_pwd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_button_normal_gray"
                android:clickable="true"
                android:drawableLeft="@drawable/edit_pwd_img"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                android:text="修改密码"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#DFDFDF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="20dp"
                android:background="#DFDFDF" />

            <TextView
                android:id="@+id/preference"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_button_normal_gray"
                android:clickable="true"
                android:drawableLeft="@drawable/preference_img"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                android:text="设置关于"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#DFDFDF" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="20dp"
                android:background="#DFDFDF" />

            <TextView
                android:id="@+id/change_user"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_button_normal_gray"
                android:clickable="true"
                android:drawableLeft="@drawable/change_user_img"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                android:text="切换账号"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#DFDFDF" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>